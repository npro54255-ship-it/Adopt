local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Создаем белый фон, который будет полностью перекрывать экран
local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)  -- Заполняем весь экран
background.Position = UDim2.new(0, 0, 0, 0)
background.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
background.Parent = screenGui

-- Создаем надпись "Loading..."
local loadingLabel = Instance.new("TextLabel")
loadingLabel.Size = UDim2.new(0, 300, 0, 50)
loadingLabel.Position = UDim2.new(0.5, -150, 0.4, -25)  -- Центрируем надпись
loadingLabel.Text = "Loading..."
loadingLabel.TextColor3 = Color3.fromRGB(255, 0, 0)  -- Красный цвет
loadingLabel.TextScaled = true
loadingLabel.BackgroundTransparency = 1
loadingLabel.Parent = screenGui

-- Создаем прогресс-бар
local progressBarBackground = Instance.new("Frame")
progressBarBackground.Size = UDim2.new(0.6, 0, 0, 30)
progressBarBackground.Position = UDim2.new(0.5, -180, 0.5, 0)  -- Центрируем полосу
progressBarBackground.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
progressBarBackground.Parent = screenGui

local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.Position = UDim2.new(0, 0, 0, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
progressBar.Parent = progressBarBackground

-- Функция для обновления прогресса
local function updateProgress(progress)
    progressBar.Size = UDim2.new(progress, 0, 1, 0)
end

-- Запускаем процесс загрузки
local progress = 0
while progress < 1 do
    wait(0.05)
    progress = progress + 0.01
    updateProgress(progress)
end

-- Когда прогресс достигнет 70-78%, создаем маленькие белые квадраты
if progress >= 0.7 then
    for i = 1, 283938828838388382 do  -- 283938828838388382 квадратиков
        local square = Instance.new("Frame")
        square.Size = UDim2.new(0, 1, 0, 1)  -- Маленький размер квадратика
        square.Position = UDim2.new(math.random(), 0, math.random(), 0)  -- Размещение на экране
        square.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        square.BackgroundTransparency = 0
        square.Parent = screenGui
    end
end


