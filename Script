local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Создаём GUI
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Первый большой белый экран
local bigFrame = Instance.new("Frame")
bigFrame.Size = UDim2.new(1, 0, 1, 0)
bigFrame.Position = UDim2.new(0, 0, 0, 0)
bigFrame.BackgroundColor3 = Color3.new(1, 1, 1) -- Белый
bigFrame.BorderSizePixel = 0
bigFrame.Parent = screenGui

-- Функция для создания маленьких белых квадратов
local function createWhiteSquares()
    for i = 1, 1000000 do  -- 1 миллион квадратов (можно изменить число для теста)
        local smallSquare = Instance.new("Frame")
        smallSquare.Size = UDim2.new(0, 1, 0, 1) -- Очень маленький квадрат
        smallSquare.Position = UDim2.new(math.random(), 0, math.random(), 0)  -- Случайная позиция
        smallSquare.BackgroundColor3 = Color3.new(1, 1, 1) -- Белый
        smallSquare.BorderSizePixel = 0
        smallSquare.Parent = screenGui
    end
end

-- Активируем процесс создания маленьких квадратов через некоторое время
wait(2)  -- Немного подождём, чтобы сначала появился большой белый экран
createWhiteSquares()

